@model IEnumerable<RealEstate1.Models.Apartment>

@{
    ViewData["Title"] = "Tüm Daireler";
}

<h2>Tüm Daireler</h2>

<table id="tblRecords" class="table table-striped table-hover">
    <thead>
        <tr>

            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.ProjectId)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.IsFull)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.Floor)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.RoomNumber)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.RoomCount)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.UpdateDate)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.UpdatedBy)
            </th>

            <th data-orderable="false" class="all">Eylemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Project.ProjectName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsFull)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Floor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdatedBy)
                </td>

                <td class="text-nowrap">
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Rezervasyon Yap / Düzenle</a>
                    <a class="btn btn-default" asp-action="Details" asp-route-id="@item.Id">Detaylar</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                    <a class="btn btn-warning" asp-controller="Customers" asp-action="Create">Müşteri Bilgisi Ekle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
