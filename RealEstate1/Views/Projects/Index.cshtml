@model IEnumerable<RealEstate1.Models.Project>

@{
    ViewData["Title"] = "Projeler";
}

<h2>Projeler</h2>

<table id="tblRecords" class="table table-striped table-hover">
    <thead>
        <tr>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.ProjectName)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.CompanyName)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.FloorCount)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.ApartmentCount)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.UpdateDate)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.UpdatedBy)
            </th>
            <th data-orderable="false" class="all">Eylemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FloorCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApartmentCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdatedBy)
                </td>
                <td class="text-nowrap">
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                    <a class="btn btn-default" asp-action="Details" asp-route-id="@item.Id">Detaylar</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                    <a class="btn btn-warning" asp-controller="Apartments" asp-action="Index">Daireler</a>
                </td>
            </tr>
        }
    </tbody>
</table>
